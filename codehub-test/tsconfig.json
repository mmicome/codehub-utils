{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "noImplicitAny": false,
    "outDir": "./dist",
    "baseUrl": ".",
    "sourceMap": true,
    "moduleResolution":"node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@config/*": [
        "src/config/*"
      ],
      "@constants/*": [
        "src/constants/*"
      ],
      "@controller/*": [
        "src/controller/*"
      ],
      "@database/*": [
        "src/database/*"
      ],
      "@lib/*": [
        "src/lib/*"
      ],
      "@logs/*": [
        "src/logs/*"
      ],
      "@middleware/*": [
        "src/middleware/*"
      ],
      "@model/*": [
        "src/model/*"
      ],
      "@router/*": [
        "src/router/*"
      ],
      "@test/*": [
        "src/test/*"
      ],
      "@utils/*": [
        "src/utils/*"
      ],
      "@validator/*": [
        "src/validator/*"
      ],
    }
  },
  "tsc-alias": {
    "verbose": false,
  },
  "types": ["mocha"],
  "include": ["./**/*.ts", "./**/*.js"],
  "exclude": ["node_modules", "dist"]
}